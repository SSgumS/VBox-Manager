@page
@model SshModel
@{
    ViewData["Title"] = "SSH";
}

<h2>SSH to VM @Model.Vm.Name</h2>
<hr />
<div class="row">
    <div class="container">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Vm.Id" />
            <input type="hidden" asp-for="Vm.Name" />
            <div class="form-group">
                <label asp-for="Command" class="control-label"></label>
                <textarea asp-for="Command" placeholder="Your command to run using ssh like &quot;ls&quot; or &quot;mkdir&quot;." class="form-control"></textarea>
                <span asp-validation-for="Command" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button class="btn btn-primary">Run</button>
            </div>
            <div class="form-group">
                <label asp-for="Result" class="control-label"></label>
                <pre>@Model.Result</pre>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
